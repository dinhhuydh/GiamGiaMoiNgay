%h2
  = t('signup')

= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %div
    = f.label :email
    %br/
    = f.email_field :email, :autofocus => true
  %div
    = f.label :password, t('devise.form.password')
    %br/
    = f.password_field :password
  %div
    = f.label :password_confirmation, t('devise.form.password_confirmation')
    %br/
    = f.password_field :password_confirmation
  %div= f.submit t('devise.form.signup')

- if devise_mapping.recoverable? && controller_name != 'passwords'
  = link_to t('devise.link.forgot_password'), new_password_path(resource_name)
